generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  code        String?
  description  String?
  price        String?
  discount     String?
  img          String[]
  category     String
  stock        String?
  origin       Float?
  weight       Float?
  profit       Float?
  rate         Float?
  shippingCost Float?
  landing      Float?
  profitAmount Float?
  date         String?
  color        Json?
  type         String
  arrival      String   @default("no")
  cost         String?
  sub          String
  factory      String
  views     String?
  orders      String?
  sort      Int?
}

model Category {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique
  img  String[]
  sort      Int?
}

model Sub {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique 
  img  String[]
  sort      Int?
}

model Factory {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique
  img  String[]
  sort      Int?
}

model Offer {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  code String
  per  Int
}

model Order {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  oid         Int     @unique
  userInfo    Json
  cartItems   Json
  total       String
  delivery    String
  code        String?
  paid        Boolean @default(false)
  num         String?
  remark      String?
  fulfillment Boolean @default(false)
  date        String
  delete      Boolean @default(false)
}

model Review {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  date        DateTime @default(now()) @db.Date
}

model Banner {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  img String[] 
}


model Banner1 {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId 
  img String[] 
}

model Banner2 {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId 
img String[]
}


 
